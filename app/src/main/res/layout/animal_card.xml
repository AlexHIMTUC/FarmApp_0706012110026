<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:elevation="5dp"
        android:layout_margin="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <androidx.cardview.widget.CardView
                android:id="@+id/animalListImageCard"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/imageUri"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:src="@drawable/imgnotfound"/>
            </androidx.cardview.widget.CardView>
            <TextView
                android:id="@+id/animalListName"
                app:layout_constraintLeft_toRightOf="@id/animalListImageCard"
                app:layout_constraintTop_toTopOf="@id/animalListImageCard"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="BOLD"
                android:textStyle="bold"
                android:textSize="20dp"/>
            <TextView
                app:layout_constraintTop_toBottomOf="@id/animalListName"
                app:layout_constraintLeft_toLeftOf="@id/animalListName"

                android:id="@+id/animalListType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="BOLD"
                android:textSize="15dp"/>
            <TextView
                app:layout_constraintTop_toBottomOf="@id/animalListType"
                app:layout_constraintLeft_toLeftOf="@id/animalListType"
                android:id="@+id/animalListAge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="BOLD"
                android:layout_marginTop="2dp"
                android:textSize="15dp"/>
            <LinearLayout
                app:layout_constraintTop_toBottomOf="@id/animalListAge"
                app:layout_constraintLeft_toLeftOf="@id/animalListAge"
                app:layout_constraintBottom_toBottomOf="@id/animalListImageCard"
                android:layout_width="0dp"
                app:layout_constraintRight_toRightOf="parent"
                android:orientation="horizontal"
                android:weightSum="2"

                android:layout_height="wrap_content">
                <Button
                    android:id="@+id/editAnimal"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#5BED0B"
                    android:text="EDIT"/>
                <Button
                    android:id="@+id/deleteAnimal"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="5dp"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#F6074B"
                    android:text="DELETE"/>
            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>